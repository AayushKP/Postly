generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id             Int      @id @default(autoincrement())
  username       String   @unique
  password       String
  name           String?
  blogs          Blog[]   @relation("UserBlogs") // User's authored blogs
  bookmarkedBlogs Bookmark[] // Relation to the join table `Bookmark`
}

model Blog {
  id           Int       @id @default(autoincrement())
  authorId     Int
  title        String
  content      String
  published    Boolean   @default(false)
  createdAt    DateTime  @default(now())       // Timestamp for when the blog is created
  image        String?                         // Optional image field for blog
  author       User      @relation("UserBlogs", fields: [authorId], references: [id])
  bookmarks    Bookmark[] // Relation to the join table `Bookmark`
}

model Bookmark {
  userId Int
  blogId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade) // Opposite relation to `User`
  blog   Blog @relation(fields: [blogId], references: [id], onDelete: Cascade) // Opposite relation to `Blog`

  @@id([userId, blogId]) 
}